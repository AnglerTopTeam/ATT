<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
	<mapper namespace="com.gmail.lkj161226.service.MemberDao">
		<resultMap type="com.gmail.lkj161226.entities.Member" id="memberMap">
			<id property="id" column="id" />
			<id property="name" column="name" />
			<id property="nicname" column="nicname" />
			<id property="password" column="password" />
			<id property="phone1" column="phone1" />
			<id property="phone2" column="phone2" />
			<id property="phone3" column="phone3" />
			<id property="email" column="email" />
			<id property="inputdate" column="inputdate" />
			<id property="job" column="job" />
			<id property="memberlevel" column="memberlevel" />
			<id property="point" column="point" />
			<id property="cash" column="cash" />
		</resultMap>
		
		<select id="selectCount" parameterType="String" resultType="int">
			select count(*) from member where id=#{id}
		</select>
		<select id="sCount" parameterType="String" resultType="int">
			select count(*) from member where nicname=#{nicname}
		</select>
		
		<select id="selectOne" parameterType="String" resultMap="memberMap">
			select * from member where id=#{id}
		</select>
		
		<select id="selectAll" resultMap="memberMap">
			select * from member
		</select>
		
		<insert id="insertRow" parameterType="hashMap">
			insert into member (id,name,nicname,password,phone1,phone2,phone3,email,inputdate,job,memberlevel,point,cash)	
			values (#{id},#{name},#{nicname},#{password},#{phone},#{email},#{inputdate},#{job},
			#{memberlevel},#{point},#{cash})
		</insert>
		
		<update id="updateRow" parameterType="hashMap">
			update member set name=#{name},nicname=#{nicname},password=#{password},phone1=#{phone1},phone2=#{phone2},phone3=#{phone3},
			 email=#{email},inputdate=#{inputdate},job=#{job},memberlevel=#{memberlevel},point=#{point},cash=#{cash}
			where id=#{id}
		</update>
		
		<delete id="deleteRow" parameterType="String">
			delete from member 
			where id=#{id}
		</delete>
		
		<select id="selectLogin" parameterType="hashMap" resultMap="memberMap">
			select * from member where email=#{email} and password=#{password}
		</select>
		
	</mapper>